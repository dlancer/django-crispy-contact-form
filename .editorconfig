root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.py]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.html]
indent_size = 2

[*.{js,jsx,html}]
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
